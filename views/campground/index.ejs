<% layout('layouts/boilerplate') %> 

    <h1>Avaiable Campground </h1>
    <h3><a href="/campground/new">Add new Campground</a></h3>

        <% for(let ithcamp of campground){ %>
            <div class="card mb-3" >
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= ithcamp.image%>" alt="...">
                    </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-tittle ">
                            <%= ithcamp.title %>
                        </h5>
                        <p class="card-text">
                            <%= ithcamp.description%> 
                        </p>
                        <p>
                            <small class="card-text">
                                <%= ithcamp.location %> 
                            </small>
                        </p>

                        <a class="btn btn-primary" href="/campground/<%=ithcamp._id %> ">View Camp</a>
                    </div>
                </div>
                </div>

            </div> 
        <% } %> 